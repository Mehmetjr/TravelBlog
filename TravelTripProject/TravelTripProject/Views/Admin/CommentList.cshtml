@using TravelTripProject.Models.Classes
@model List<Comment>
@{
    ViewBag.Title = "CommentList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Comment List</h2>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>User</th>
        <th>Mail</th>
        <th>Comment</th>
        <th>Blog</th>
        <th>Delete</th>

    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.ID</td>
            <td>@x.UserName</td>
            <td>@x.Mail</td>
            <td>@x.Comments</td>
            <td>@x.Blog.Title</td>
            <td><a href="/Admin/DeleteComment/@x.ID" class="btn btn-danger">Delete</a></td>
        </tr>
    }

</table>
